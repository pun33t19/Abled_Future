<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/company_icon_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/google_icon"
        app:civ_border_color="#FF9800"
        app:civ_border_width="3dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_job_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/company_icon_imageview"
        android:fontFamily="@font/poppins_semibold"
        android:text="Product Design Intern"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/job_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Intern, Bangalore, India"
        android:layout_below="@id/main_job_title_text"
        android:layout_toEndOf="@id/company_icon_imageview"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        />



</RelativeLayout>